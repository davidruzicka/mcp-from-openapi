{
  "name": "mcp-from-openapi",
  "version": "0.1.0",
  "description": "MCP server for any API specified via OpenAPI specification",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-from-openapi": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "validate": "npm run build && node dist/scripts/validate-profile.js",
    "validate:schema": "npm run build && node dist/scripts/validate-schema.js"
  },
  "keywords": [
    "mcp",
    "openapi",
    "api",
    "llm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "openapi-types": "^12.1.3",
    "prom-client": "^15.1.3",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^2.1.8",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.17.0",
    "msw": "^2.7.0",
    "supertest": "^7.1.4",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18"
  }
}
