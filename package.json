{
  "name": "mcp4openapi",
  "version": "0.1.0",
  "description": "Universal MCP server that generates tools from any OpenAPI specification",
  "type": "module",
  "main": "dist/src/index.js",
  "exports": {
    ".": "./dist/src/lib.js",
    "./cli": "./dist/src/index.js"
  },
  "bin": {
    "mcp4openapi": "dist/src/index.js"
  },
  "files": [
    "dist",
    "profile-schema.json",
    "README.md",
    "LICENSE.md"
  ],
  "scripts": {
    "build": "npm run generate-schemas && tsc",
    "dev": "tsc --watch",
    "start": "node dist/src/index.js",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "generate-schemas": "node scripts/generate-schemas.js",
    "validate": "npm run build && node dist/scripts/validate-profile.js",
    "validate:schema": "npm run build && node dist/scripts/validate-schema.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "openapi",
    "api",
    "llm",
    "model-context-protocol",
    "swagger",
    "openapi-spec",
    "api-tools",
    "claude"
  ],
  "author": "David Ruzicka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidruzicka/mcp4openapi.git"
  },
  "homepage": "https://github.com/davidruzicka/mcp4openapi#readme",
  "bugs": {
    "url": "https://github.com/davidruzicka/mcp4openapi/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "openapi-types": "^12.1.3",
    "prom-client": "^15.1.3",
    "yaml": "^2.6.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^3.2.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.17.0",
    "msw": "^2.7.0",
    "supertest": "^7.1.4",
    "ts-to-zod": "^5.0.1",
    "typescript": "^5.7.2",
    "typescript-json-schema": "^0.65.1",
    "vite": "^6.0.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
