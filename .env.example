# MCP Server Configuration
OPENAPI_SPEC_PATH=./profiles/examples/gitlab/openapi.yaml
MCP_PROFILE_PATH=./profiles/examples/gitlab/developer-profile.json
MCP_TRANSPORT=stdio

# Local HTTP Transport (when MCP_TRANSPORT=http)
MCP_HOST=127.0.0.1
MCP_PORT=3003
# Remote HTTP Transport
# MCP_HOST=0.0.0.0
# ALLOWED_ORIGINS="*.company.com,192.168.0.0/16,10.0.0.0/8"

# Session Management
SESSION_TIMEOUT_MS=1800000

# Heartbeat (for reverse proxy keepalive e.g.)
HEARTBEAT_ENABLED=false
HEARTBEAT_INTERVAL_MS=30000

# Metrics (Prometheus)
METRICS_ENABLED=false
METRICS_PATH=/metrics

# Logging
LOG_LEVEL=info
LOG_FORMAT=console

# API Configuration
API_TOKEN=your-api-token-here
API_BASE_URL=https://gitlab.com/api/v4
